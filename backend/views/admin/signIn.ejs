<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>SignIn page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="/css/custom.css">
</head>
<body>
  <div class="container-fluid">
      <div class="messages">
        <div class="status-message" id="successDiv">
          <% if(typeof status !== 'undefined' && (status==400 || status==500)){ %>
            <script>
              function test(){
                setTimeout(() => {
                  let messageDiv=document.getElementById('successDiv');
                  messageDiv.classList.add("visible");
                }, 1000);
              }
              test();
            </script>
        <p class="errorMsg"><span class="crossIcon"><i class="fa-solid fa-xmark"></i></span><%= message %> <img src="/images/error.png" alt="" height="50px" width="50px"></p>
        <% }else if(typeof status !== 'undefined' && status===201){ %>
          <p class="errorMsg successMsg"><span class="crossIcon"><i class="fa-solid fa-xmark"></i></span><%= message %> <img src="/images/error.png" alt="" height="50px" width="50px"></p>
          <% } %>

      </div>
    </div>
    <div class="container">
      <div class="row signInform-div justify-content-center align-items-center" >
        <div class="col-10">
          <div class="row boxShadow">
            <div class="col-6 mt-4 p-4 justify-content-center align-items-center">
              <div class="h2tag mt-4">
                <h2>Please Sign In</h2>
              </div>
              <form method="post" action="/admin/signin">
                <div class="mb-3 mt-4">
                  <label for="exampleInputEmail1" class="form-label labeldesign">Email address</label>
                  <input type="email" class="form-control inputdesign mt-2" name="email" id="email" placeholder="Please Enter Your Email">
                </div>
                <div class="mb-3 mt-4 p-2">
                  <label for="exampleInputPassword1" class="form-label labeldesign">Password</label>
                  <input type="password" class="form-control inputdesign mt-2" name="password" id="password" placeholder="Please Enter Password">
                </div>
                <div class="btn mt-4">
                  <button type="submit" class="btn btn-primary submitBtn">Submit</button>
                </div>
                <div class="signIn">
                  <span>Don't have an Account</span>
                  <a class="goToLink" href="/admin/signup">Sign Up Here</a>
              </div>
              </form>
            </div>
            <div class="col-6 imagedesign p-0 g-0">
              <img class="imagepos img-fluid" src="/images/sideform.jpg" alt="Your Image">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
    <script src="/js/style.js"></script>
</body>

</html>